<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans 
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <import resource="jpa.xml" />
	<import resource="dataSources.xml" />
    <import resource="jdbc.xml" />
    
    <context:annotation-config/>
	<context:component-scan base-package="it.polito.ai.gas" />
	    
	<!-- <bean id="logger" class="it.polito.ai.gas.beans.FlyweightLogger"></bean> -->
	<bean id="logger" class="org.apache.log4j.Logger"
			factory-method="getRootLogger" scope="singleton"></bean>
	
	<bean id="UserDAO" class="it.polito.ai.gas.dao.UserDAOHibernate"></bean>
	<bean id="ApprovalDAO" class="it.polito.ai.gas.dao.ApprovalDAOHibernate"></bean>
	<bean id="ProducerInfoDAO" class="it.polito.ai.gas.dao.ProducerInfoDAOHibernate"></bean>
	<bean id="ProductDAO" class="it.polito.ai.gas.dao.ProductDAOHibernate"></bean>
	
	<bean id="user" class="it.polito.ai.gas.beans.UserBean"></bean>
	<bean id="delegate" class="it.polito.ai.gas.beans.DelegateBean"></bean>

</beans>
